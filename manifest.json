{
    "name": "Display iSAMS PDF files inline",
    "version": "1.1.0",
    "description": "Force any PDF file stored in iSAMS (hosted) to be displayed in-browser regardless of disposition or content type",
    "manifest_version": 2,
    "homepage_url": "https://north27.co.uk",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.isams.co.uk/*",
        "*://*.isams.cloud/*"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Display iSAMS PDF files inline",
        "default_icon": "icon128.png"
    },
    "background" : {
        "scripts" : ["background.js"],
        "persistent": true
    },
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
  }
